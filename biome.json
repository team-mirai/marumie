{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "includes": [
      "admin/src/**/*",
      "admin/*.ts",
      "admin/*.js",
      "admin/*.tsx",
      "admin/*.jsx",
      "webapp/src/**/*",
      "webapp/*.ts",
      "webapp/*.js",
      "webapp/*.tsx",
      "webapp/*.jsx"
    ],
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useImportType": "error",
        "useConsistentArrayType": "off",
        "useNodejsImportProtocol": "off"
      },
      "suspicious": {
        "noImplicitAnyLet": "off",
        "noUnknownAtRules": "off"
      },
      "nursery": {
        "useSortedClasses": "off"
      },
      "correctness": {
        "useUniqueElementIds": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "off"
        }
      }
    }
  },
  "overrides": [
    {
      "includes": ["admin/src/client/components/ui/**/*", "webapp/src/client/components/ui/**/*"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off"
          }
        }
      }
    }
  ]
}
