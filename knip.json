{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreDependencies": [
    "server-only",
    "client-only",
    "@tailwindcss/postcss",
    "tailwindcss",
    "critters"
  ],
  "workspaces": {
    ".": {
      "entry": ["shared/**/*.ts"]
    },
    "webapp": {
      "entry": [
        "src/app/**/page.tsx",
        "src/app/**/layout.tsx",
        "src/app/**/route.ts",
        "src/app/**/not-found.tsx"
      ],
      "project": ["src/**/*.{ts,tsx}"],
      "ignore": ["src/client/components/ui/**/*"]
    },
    "admin": {
      "entry": [
        "src/app/**/page.tsx",
        "src/app/**/layout.tsx",
        "src/app/**/route.ts"
      ],
      "project": ["src/**/*.{ts,tsx}"],
      "ignore": ["src/client/components/ui/**/*"]
    }
  }
}
