{
  "name": "marumie",
  "version": "0.1.0",
  "license": "AGPL-3.0",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "packages/*",
    "admin",
    "webapp"
  ],
  "scripts": {
    "// Development": "========================================",
    "dev": "pnpm supabase:start && concurrently \"pnpm dev:webapp\" \"pnpm dev:admin\"",
    "dev:setup": "pnpm install && pnpm db:reset && echo 'Setup complete! Run: pnpm dev'",
    "dev:webapp": "pnpm --filter webapp dev",
    "dev:admin": "pnpm --filter admin dev",
    "// Build & Deploy": "====================================",
    "build": "pnpm build:webapp",
    "build:webapp": "pnpm --filter webapp build",
    "build:admin": "pnpm --filter admin build",
    "build:all": "pnpm build:webapp && pnpm build:admin",
    "start": "pnpm --filter webapp start",
    "start:admin": "pnpm --filter admin start",
    "// Code Quality": "======================================",
    "lint": "pnpm lint:webapp && pnpm lint:admin",
    "lint:webapp": "pnpm --filter webapp lint",
    "lint:admin": "pnpm --filter admin lint",
    "format": "npx biome format --write .",
    "typecheck": "pnpm typecheck:webapp && pnpm typecheck:admin",
    "typecheck:webapp": "pnpm --filter webapp type-check",
    "typecheck:admin": "pnpm --filter admin type-check",
    "depcruise": "cd admin && depcruise src --config ../.dependency-cruiser.cjs",
    "// Testing": "===========================================",
    "test": "pnpm test:admin && pnpm test:webapp",
    "test:admin": "pnpm --filter admin test",
    "test:webapp": "pnpm --filter webapp test",
    "test:watch": "pnpm --filter admin test:watch",
    "test:e2e": "pnpm test:e2e:admin",
    "test:e2e:admin": "pnpm --filter admin test:e2e",
    "test:e2e:ui": "pnpm --filter admin test:e2e:ui",
    "// Database": "==========================================",
    "db:generate": "prisma generate",
    "db:migrate": "pnpm -s dotenv -e .env.dev -- prisma migrate dev",
    "db:migrate:prod": "pnpm -s dotenv -e .env.prod -- prisma migrate deploy",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "pnpm supabase:reset && pnpm db:migrate && pnpm db:seed",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate && npx simple-git-hooks",
    "// Supabase": "==========================================",
    "supabase:init": "supabase init",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "supabase status",
    "supabase:reset": "supabase db reset",
    "supabase:types": "supabase gen types typescript --local > supabase/types.gen.ts",
    "// Utilities": "=========================================",
    "clean": "pnpm supabase:stop && rm -rf node_modules */node_modules",
    "fresh": "pnpm clean && pnpm install && pnpm dev:setup",
    "knip": "knip"
  },
  "dependencies": {
    "@prisma/client": "^6.19.1",
    "@supabase/supabase-js": "^2.89.0",
    "dotenv": "^16.6.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "concurrently": "^8.2.2",
    "dependency-cruiser": "^17.3.5",
    "dotenv-cli": "^10.0.0",
    "knip": "^5.78.0",
    "lint-staged": "^15.5.2",
    "prisma": "^6.14.0",
    "simple-git-hooks": "^2.13.1",
    "supabase": "^2.70.5",
    "tsx": "^4.21.0",
    "typescript": "^5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "npm run format"
  }
}
